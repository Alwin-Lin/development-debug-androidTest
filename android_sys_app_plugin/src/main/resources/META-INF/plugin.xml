<idea-plugin>
  <id>com.alwin.asap</id>
  <name>android_sys_app_plugin</name>
  <vendor email="alwin001@gmail.com">Android system app plugin</vendor>

  <description>
      Android system app plugin
  </description>

  <change-notes>
      Release notes here
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <actions>
    <group id="MyPlugin.TopMenu"
        text="_MyPlugin"
        description="MyPlugin Toolbar Menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="MyAction"
          class="com.alwin.asap.MyAction"
          text="_MyAction"
          description="MyAction"/>
    </group>
  </actions>

  <project-components>
    <component>
      <implementation-class>com.alwin.asap.TestProjectComponent</implementation-class>
    </component>
  </project-components>

</idea-plugin>